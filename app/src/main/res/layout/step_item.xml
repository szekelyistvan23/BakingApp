<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/thin_margin"
    android:layout_marginBottom="@dimen/thin_margin"
    android:layout_marginStart="@dimen/standard_margin"
    android:layout_marginEnd="@dimen/standard_margin">

    <TextView
        android:id="@+id/step_short_description"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/step_item_text_height"
        android:layout_marginStart="@dimen/bigger_margin"
        android:gravity="center_vertical"
        tools:text="Step short description" />
</android.support.v7.widget.CardView>